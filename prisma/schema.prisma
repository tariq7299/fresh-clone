generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

enum Gender {
  male
  female
  both
}

model Business {
  id          Int @id @default(autoincrement())
  userId      Int @unique
  name_ar     String?
  name_en     String?
  description_ar String?
  description_en String?
  website_url String?   // Optional field with ?
  capacity    Int?
  category_id Int?
  location     BusinessLocation?
  gender     Gender?    // You might want to use enum here
  services    BusinessService[] // Relation to services
}

model BusinessService {
  id          Int      @id @default(autoincrement())
  business    Business @relation(fields: [businessId], references: [id])
  businessId  Int
  service_id  Int
  duration    Int    
  price      Float

  @@unique([businessId, service_id])

}

model BusinessLocation {
  id          Int      @id @default(autoincrement())
  business    Business @relation(fields: [businessId], references: [id])
  businessId  Int      @unique
  lat         Float    // Use Float for latitude
  lng         Float    // Use Float for longitude
  place_id    String   @unique
  address     String   // Full address (can be optional if place_id is unique)
  district    String?  // District (optional)
  city        String?  // City (optional)
  country     String   // Country (required)
  directions  String?  
  street  String?  
  apartment  String?  
  building  String?  

}
